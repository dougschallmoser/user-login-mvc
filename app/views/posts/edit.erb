<h5><%= "You are logged in as #{session[:email]}." if session[:email] %></h5>
<h1>Edit Post</h1>
<br>
<form method="POST" action="/posts/<%=@post.id%>">
    <input type="hidden" id="hidden" name="_method" value="patch"
    <label for="title">Title:</label>
    <input type="text" id="title" name="post[title]" value="<%=@post.title%>" size="64">
    <br>
    <p>
        <label for="content">Content:</label><br>
        <textarea id="content" name="post[content]" rows="20" cols="60"><%=@post.content%></textarea>
    </p>
    <p><input type="submit" value="Save"></p>
</form>